@model APOD.Controllers.APODAndCommentViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>APOD</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.APOD.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.APOD.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.APOD.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.APOD.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.APOD.Explanation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.APOD.Explanation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.APOD.Hdurl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.APOD.Hdurl)"
                 style="max-width: 400px; height: auto;" alt="image" />
        </dd>
    </dl>
</div>

<form asp-action="Details" asp-route-id="@Model.APOD.Id">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="New_Comment.Author" class="control-label"></label>
        <input asp-for="New_Comment.Author" class="form-control" />
        <span asp-validation-for="New_Comment.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="New_Comment.Password" class="control-label"></label>
        <input asp-for="New_Comment.Password" class="form-control" />
        <span asp-validation-for="New_Comment.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="New_Comment.Contents" class="control-label"></label>
        <input asp-for="New_Comment.Contents" class="form-control" />
        <span asp-validation-for="New_Comment.Contents" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="댓글달기" class="btn btn-primary" />
    </div>
</form>

<ul>
    @if(Model.Comment != null)
    {
        foreach(var comment in Model.Comment)
        {
            <li>@comment.Author</li>
            <li>@comment.Date</li>
            <li>@comment.Contents</li>
            <a asp-action="Edit" asp-route-id="@comment.Id" asp-route-postid="@Model.APOD.Id">Edit</a>
            <a asp-action="Delete_Comment" asp-route-id="@comment.Id" asp-route-postid="@Model.APOD.Id">Delete</a>
        }
    }
</ul>

<div>
    <a asp-action="Edit" asp-route-id="@Model.APOD.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
